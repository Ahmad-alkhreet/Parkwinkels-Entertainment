@page "{id:int}"
@model BewerkModel
@{
    ViewData["Title"] = "Product bewerken";
}

<h2>Product bewerken</h2>

<form method="post" class="form">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="Naam"></label>
        <input asp-for="Naam" class="form-control" />
        <span asp-validation-for="Naam" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Categorie"></label>
        <input asp-for="Categorie" class="form-control" />
        <span asp-validation-for="Categorie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VoorraadAantal"></label>
        <input asp-for="VoorraadAantal" class="form-control" />
        <span asp-validation-for="VoorraadAantal" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MinimaleVoorraad"></label>
        <input asp-for="MinimaleVoorraad" class="form-control" />
        <span asp-validation-for="MinimaleVoorraad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prijs"></label>
        <input asp-for="Prijs" class="form-control" />
        <span asp-validation-for="Prijs" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-page="/Producten" class="btn btn-secondary">Annuleren</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

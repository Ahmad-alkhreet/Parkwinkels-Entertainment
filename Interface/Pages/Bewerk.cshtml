@page
@model BewerkModel
@{
    ViewData["Title"] = "Product bewerken";
}

<h2>Product bewerken</h2>

<form method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="mb-3">
        <label asp-for="Naam" class="form-label">Naam</label>
        <input asp-for="Naam" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Categorie" class="form-label">Categorie</label>
        <input asp-for="Categorie" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="VoorraadAantal" class="form-label">Voorraad</label>
        <input asp-for="VoorraadAantal" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="MinimaleVoorraad" class="form-label">Minimum voorraad</label>
        <input asp-for="MinimaleVoorraad" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Prijs" class="form-label">Prijs (€)</label>
        <input asp-for="Prijs" type="number" step="0.01" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Opslaan</button>
    <a asp-page="/Producten" class="btn btn-secondary ms-2">Annuleren</a>
</form>

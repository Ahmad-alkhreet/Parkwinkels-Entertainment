<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Parkwinkel Area42</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            display: flex;
            flex-direction: row;
            min-height: 100vh;
        }

        .sidebar {
            width: 220px;
            background-color: #0d6efd;
            color: white;
            transition: width 0.3s ease;
        }

            .sidebar.collapsed {
                width: 60px;
            }

            .sidebar a {
                display: block;
                color: white;
                padding: 12px 16px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #0056b3;
                }

        .main-content {
            flex: 1;
            padding: 2rem;
            overflow: auto;
        }

        .toggle-btn {
            background: none;
            border: none;
            color: white;
            padding: 10px;
            font-size: 1.2rem;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div id="sidebar" class="sidebar">
        <button onclick="toggleSidebar()" class="toggle-btn">☰</button>
        <a asp-page="/Index">🏠 Home</a>
        <a asp-page="/Producten">🛒 Producten</a>
        <a asp-page="/Activiteiten">🎭 Activiteiten</a>
        <a asp-page="/Nieuws">📰 Nieuws</a>
        <a asp-page="/Medewerkers">👥 Medewerkers</a>
    </div>

    <div class="main-content">
        @RenderBody()

        <footer class="text-center text-muted mt-4 pt-4 border-top">
            &copy; 2025 - Parkwinkel Area42
        </footer>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('collapsed');
        }
    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
